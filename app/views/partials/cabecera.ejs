                            <input type="text" class="form-control" name="usuario" id="usuario" placeholder="Usuario" required autofocus>
                        </div>
                        <div class="form-group">
                            <textarea type="text"  class="form-control"  name="mensaje" style="height : 200px" id="texto" placeholder="Mensaje" required autofocus></textarea>
                        </div>

                        <p class="text-center">
                           <i class="fa fa-paper-planes"></i> <input type="submit" class="btn btn-template-main" value="Enviar">
                        </p>

                    </form>

                </div>
            </div>
